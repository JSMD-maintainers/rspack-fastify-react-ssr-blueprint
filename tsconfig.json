{
  "include": ["client/**/*", "server/**/*", "scripts/**/*", "global.d.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react"
  }
}
